<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blockchainjava.Controller.AdminDashboardController">

    <top>
        <HBox spacing="10" style="-fx-background-color: #FF5722; -fx-padding: 10;">
            <Label text="Admin Dashboard" style="-fx-text-fill: white; -fx-font-size: 20;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="adminNameLabel" style="-fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <TabPane>
            <Tab text="Validators Management" closable="false">
                <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 10;">
                    <!-- Add Validator Form -->
                    <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 10;">
                        <Label text="Username:"/>
                        <TextField fx:id="usernameField"/>

                        <Label text="Role:"/>
                        <ComboBox fx:id="roleComboBox">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="VALIDATOR"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="Password:"/>
                        <PasswordField fx:id="passwordField"/>

                        <Label text="Balance:"/>
                        <TextField fx:id="balanceField"/>

                        <Label text="IP Address:"/>
                        <TextField fx:id="ipField"/>

                        <Label text="Port:"/>
                        <TextField fx:id="portField"/>

                        <Button text="Add New Validator" onAction="#handleAddValidator"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </VBox>

                    <!-- Validator Table -->
                    <!--<TableView fx:id="validatorTable" style="-fx-background-color: #ffffff;">
                        <columns>
                            <TableColumn text="Username" fx:id="usernameColumn" />
                            <TableColumn text="Public Key" fx:id="publicKeyColumn" />
                            <TableColumn text="Active" fx:id="activeColumn" />
                        </columns>
                    </TableView>-->
                </VBox>
            </Tab>
        </TabPane>
    </center>

</BorderPane>
