<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="430.0" prefWidth="622.0" spacing="20.0" style="-fx-background-image: url('https://i.pinimg.com/736x/1c/84/c7/1c84c7746accc653c2f23aae204b202d.jpg'); -fx-background-repeat: no-repeat; -fx-background-size: cover;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blockchainjava.MainController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Conteneur principal pour les onglets -->
    <VBox alignment="CENTER" maxHeight="600" maxWidth="750" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 0);">
        <TabPane fx:id="mainTabPane" maxWidth="700" tabClosingPolicy="UNAVAILABLE">
            <!-- Login Tab -->
            <Tab fx:id="loginTab" text="Login">
                <VBox alignment="CENTER" spacing="30" style="-fx-padding: 25;">
                    <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Welcome to Blockchain Application" textAlignment="CENTER" />
                    <VBox maxWidth="500" spacing="20">
                        <TextField fx:id="loginUsername" promptText="Username" />
                        <PasswordField fx:id="loginPassword" promptText="Password" />
                        <Button maxWidth="Infinity" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Login" />
                    </VBox>
                </VBox>
            </Tab>

            <!-- Sign Up Tab -->
            <Tab fx:id="signupTab" text="Sign Up">
                <VBox alignment="CENTER" spacing="30" style="-fx-padding: 25;">
                    <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Create New Account" />
                    <VBox maxWidth="500" spacing="20">
                        <TextField fx:id="signupUsername" promptText="Username" />
                        <PasswordField fx:id="signupPassword" promptText="Password" />
                        <PasswordField fx:id="signupConfirmPassword" promptText="Confirm Password" />
                        <Button maxWidth="Infinity" onAction="#handleSignup" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Sign Up" />
                    </VBox>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>

</VBox>
